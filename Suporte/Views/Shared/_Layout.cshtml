
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - Fazendas</title>
    <link rel="stylesheet" href="~/Content/Css/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/Css/estilos.css" />
    <link rel="stylesheet" href="~/Content/Css/Style.css" />
    <link rel="stylesheet" href="~/Content/Css/bootstrap-responsive.css" />
</head>
<body>
    @Html.Partial("_MenuSuperior")
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span2">
                <!-- menu -->
                @Html.Action("Index", "Menu")
            </div>
            <div class="span9">
                <!-- conteúdo -->
                @RenderBody()
            </div>
        </div>
    </div>

    @RenderSection("Scripts", required: false)
    <script src="~/Content/js/jquery.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/navbar-animation-fix.js"></script>
</body>
</html>