@model IList<Suporte.Dominio.Perfil>
<label class="label  btn-danger">@ViewBag.Error</label>
<table class="table table-condensed table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th>@Html.ActionLink("Incluir", "Incluir", "Perfil", null, new { @class = "btn btn-info btn-xs  pull-right" })</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var perfil in Model)
            {
            <tr>
                <td>@perfil.Id</td>
                <td>@Html.ActionLink(perfil.txNome, "Visualiza", new { id = perfil.Id })</td>
                @*<td>@perfil.Descricao</td>*@
                <td>@Html.ActionLink("Excluir", "Excluir", "Perfil", new { id = perfil.Id }, new { @class = "btn btn-info btn-xs  pull-right", @onclick = "JavaScript:return(confirm('Confirma a exclusão do registro?'))" })</td>
            </tr>
        }
    </tbody>
</table>

