@model IList<Suporte.Dominio.Solucao>
<label class="label  btn-danger">@ViewBag.Error</label>
<table class="table table-condensed table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>@Html.ActionLink("Incluir", "Form", "Solucao", new { id = 0 }, new { @class = "btn btn-info btn-xs  pull-right" })</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var solucao in Model)
            {
            <tr>
                <td>@solucao.Id</td>
                <td>@Html.ActionLink(solucao.TxSolucao, "Form", new { id = solucao.Id })</td>
                <td>@Html.ActionLink("Excluir", "Excluir", "Solucao", new { id = solucao.Id }, new { @class = "btn btn-info btn-xs  pull-right", @onclick = "JavaScript:return(confirm('Confirma a exclusão do registro?'))" })</td>
            </tr>
        }
    </tbody>
</table>
